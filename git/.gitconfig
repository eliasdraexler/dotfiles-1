[alias]
    cdiff = diff --cached
    st = status --short
    merge-branch = merge --log --no-commit --no-ff
    fix-submodules = submodule update --recursive --init
    recursive = "!sh -c 'for i in . `git submodule foreach -q --recursive pwd`; do cd $i && git $@; done' -"
    recursive-sh = "!sh -c 'for i in . `git submodule foreach -q --recursive pwd`; do cd $i && $@; done' -"
    pt = !git tag -l | xargs git tag -d && git fetch -t
    s = status
    up = pull --rebase
[branch]
    sort = -committerdate

[color]
	diff = auto
	status = auto
	branch = auto

[diff]
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[merge]
	tool = vimdiff

[push]
    followTags = true

[rerere]
	enabled = true

[user]
    name = Elias Dr√§xler
    email = elias.draexler@viesure.io


[init]
	templatedir = ~/.git-templates
[core]
	pager = less -S
[pull]
	ff = only
